@model IEnumerable<VaccineTrakingSystem.BLL.DTOs.FeedbackDTO>

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4">Admin Dashboard</h2>

    <!-- Overview Statistics -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Feedbacks</h5>
                    <h2 class="card-text">@ViewBag.TotalFeedbacks</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Average Rating</h5>
                    <h2 class="card-text">@ViewBag.AverageRating.ToString("F1")</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart and Table -->
    <div class="row">
        <!-- Rating Distribution Chart -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Rating Distribution</h5>
                </div>
                <div class="card-body">
                    <canvas id="ratingChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Feedback Table -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Feedback List</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Rating</th>
                                    <th>Comments</th>
                                    <th>Date</th>
                                    <th>Customer Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @for (int i = 1; i <= item.Rating; i++)
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                        </td>
                                        <td>@item.Comments</td>
                                        <td>@item.FeedbackDate.ToString("dd/MM/yyyy")</td>
                                        <td>@item.CustomerId</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Initialize chart
        var ctx = document.getElementById('ratingChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.Labels)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(ViewBag.Data)),
                    backgroundColor: [
                        '#FF6384',
                        '#36A2EB',
                        '#FFCE56',
                        '#4BC0C0',
                        '#9966FF'
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'right',
                    },
                    title: {
                        display: true,
                        text: 'Rating Distribution by Stars'
                    }
                }
            }
        });
    </script>
}
