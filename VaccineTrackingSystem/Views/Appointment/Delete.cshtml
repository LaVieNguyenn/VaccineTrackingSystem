@model VaccineTrakingSystem.DAL.Models.Appointment

<h2>Delete Appointment</h2>
<p>Are you sure you want to delete this appointment?</p>

<div>
    <strong>Child ID:</strong> @Model.ChildId <br>
    <strong>Service ID:</strong> @Model.ServiceId <br>
    <strong>Appointment Date:</strong> @Model.AppointmentDate.ToShortDateString() <br>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AppointmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
