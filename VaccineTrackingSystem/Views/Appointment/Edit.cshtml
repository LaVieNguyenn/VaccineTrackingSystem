@model VaccineTrakingSystem.DAL.Models.Appointment

<h2>Edit Appointment</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AppointmentId" />

    <div class="mb-3">
        <label>Child ID</label>
        <input type="number" class="form-control" asp-for="ChildId" required />
    </div>

    <div class="mb-3">
        <label>Service ID</label>
        <input type="number" class="form-control" asp-for="ServiceId" required />
    </div>

    <div class="mb-3">
        <label>Appointment Date</label>
        <input type="datetime-local" class="form-control" asp-for="AppointmentDate" required />
    </div>

    <div class="mb-3">
        <label>Status</label>
        <select class="form-control" asp-for="Status">
            <option value="0">Pending</option>
            <option value="1">Confirmed</option>
        </select>
    </div>

    <div class="mb-3">
        <label>Payment Status</label>
        <select class="form-control" asp-for="PaymentStatus">
            <option value="0">Unpaid</option>
            <option value="1">Paid</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
