@model IEnumerable<VaccineTrakingSystem.DAL.Models.Appointment>

<h2>Appointment List</h2>
<a asp-action="Create" class="btn btn-success mb-3">New Appointment</a>

<table class="table">
    <thead>
        <tr>
            <th>Child ID</th>
            <th>Service ID</th>
            <th>Appointment Date</th>
            <th>Status</th>
            <th>Payment Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.ChildId</td>
                <td>@appointment.ServiceId</td>
                <td>@appointment.AppointmentDate.ToShortDateString()</td>
                <td>@(appointment.Status == 1 ? "Confirmed" : "Pending")</td>
                <td>@(appointment.PaymentStatus == 1 ? "Paid" : "Unpaid")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@appointment.AppointmentId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@appointment.AppointmentId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
