@model IEnumerable<VaccineTrakingSystem.BLL.DTOs.FeedbackDTO>

@{
    ViewData["Title"] = "Đánh giá của tôi";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Tạo đánh giá mới</a>
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            Đánh giá #@item.FeedbackId
                            @if (item.AppointmentId.HasValue)
                            {
                                <span class="badge bg-info">Lịch hẹn #@item.AppointmentId</span>
                            }
                        </h5>
                        <div class="mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fas fa-star @(i <= item.Rating ? "text-warning" : "text-muted")"></i>
                            }
                        </div>
                        <p class="card-text">@item.Comments</p>
                        <p class="card-text"><small class="text-muted">Ngày đánh giá: @item.FeedbackDate.ToString("dd/MM/yyyy HH:mm")</small></p>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.FeedbackId" class="btn btn-sm btn-outline-primary">Chỉnh sửa</a>
                            <form asp-action="Delete" asp-route-id="@item.FeedbackId" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bạn có chắc muốn xóa đánh giá này?')">Xóa</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 