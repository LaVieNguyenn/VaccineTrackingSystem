@model List<VaccineTrakingSystem.BLL.DTOs.FeedbackResponseDTO>

@{
    ViewData["Title"] = "Đánh giá";
}

<div class="container mt-4">
    <h2>Đánh giá</h2>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Cuộc hẹn</th>
                                    <th>Khách hàng</th>
                                    <th>Điểm đánh giá</th>
                                    <th>Nhận xét</th>
                                    <th>Ngày đánh giá</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var feedback in Model)
                                {
                                    <tr>
                                        <td>@feedback.FeedbackId</td>
                                        <td>@(feedback.AppointmentId?.ToString() ?? "N/A")</td>
                                        <td>@feedback.CustomerId</td>
                                        <td>
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= feedback.Rating)
                                                {
                                                    <i class="fas fa-star text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star text-warning"></i>
                                                }
                                            }
                                        </td>
                                        <td>@(feedback.Comments ?? "Không có")</td>
                                        <td>@feedback.FeedbackDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            <a href="@Url.Action("Details", new { id = feedback.FeedbackId })" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a href="@Url.Action("Delete", new { id = feedback.FeedbackId })" class="btn btn-danger btn-sm" 
                                                   onclick="return confirm('Bạn có chắc chắn muốn xóa đánh giá này?')">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 