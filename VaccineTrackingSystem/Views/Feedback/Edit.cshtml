@model VaccineTrakingSystem.BLL.DTOs.FeedbackDTO

@{
    ViewData["Title"] = "Chỉnh sửa đánh giá";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="FeedbackId" />
                <input type="hidden" asp-for="AppointmentId" />
                <input type="hidden" asp-for="CustomerId" />
                <input type="hidden" asp-for="FeedbackDate" />
                <input type="hidden" asp-for="CreatedAt" />
                
                <div class="form-group mb-3">
                    <label asp-for="Rating" class="control-label">Đánh giá sao</label>
                    <div class="rating">
                        @for (int i = 5; i >= 1; i--)
                        {
                            <input type="radio" asp-for="Rating" value="@i" id="star@i" />
                            <label for="star@i">☆</label>
                        }
                    </div>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Comments" class="control-label">Nhận xét</label>
                    <textarea asp-for="Comments" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Comments" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <style>
        .rating {
            display: flex;
            flex-direction: row-reverse;
            justify-content: flex-end;
        }
        .rating input {
            display: none;
        }
        .rating label {
            font-size: 30px;
            color: #ddd;
            padding: 5px;
            cursor: pointer;
        }
        .rating input:checked ~ label,
        .rating label:hover,
        .rating label:hover ~ label {
            color: #ffd700;
        }
    </style>
} 