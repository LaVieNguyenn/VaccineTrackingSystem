@model List<VaccineTrakingSystem.BLL.DTOs.PaymentResponseDTO>

@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container mt-4">
    <h2>Thanh toán</h2>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Cuộc hẹn</th>
                                    <th>Khách hàng</th>
                                    <th>Số tiền</th>
                                    <th>Ngày thanh toán</th>
                                    <th>Phương thức</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model)
                                {
                                    <tr>
                                        <td>@payment.PaymentId</td>
                                        <td>@payment.AppointmentId</td>
                                        <td>@payment.CustomerId</td>
                                        <td>@payment.Amount.ToString("N0") đ</td>
                                        <td>@payment.PaymentDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@payment.PaymentMethod</td>
                                        <td>
                                            @switch (payment.PaymentStatus)
                                            {
                                                case 0:
                                                    <span class="badge badge-warning">Chờ xử lý</span>
                                                    break;
                                                case 1:
                                                    <span class="badge badge-success">Đã thanh toán</span>
                                                    break;
                                                case 2:
                                                    <span class="badge badge-danger">Đã hủy</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details", new { id = payment.PaymentId })" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a href="@Url.Action("Edit", new { id = payment.PaymentId })" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 